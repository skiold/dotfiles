[core]
  excludesfile = "/Users/adrian/.gitignore"

[user]
  name = Adrian Silva
  email = adrian@peertransfer.com
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[alias]
  co = checkout
  branch-graph = log --graph --pretty=oneline --abbrev-commit
[merge]
  tool = suremerge
  conflictstyle = diff3
[mergetool "suremerge"]
  cmd = "\"/Applications/guiffy93/guiffyCL.command\" -s \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\""
  keepBackup = false
  trustExitCode = false
[diff]
  tool = guiffy
[difftool "guiffy"]
  cmd  = "\"/Applications/guiffy93/guiffyCL.command\" \"$LOCAL\" \"$REMOTE\""
[push]
  default = tracking
[rerere]
  enabled = true
