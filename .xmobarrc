Config {
        -- from http://karuppuswamy.com/wordpress/2011/09/03/how-to-get-a-productive-desktop-based-on-xmonad-and-xmobar/
          bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 95
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{ %swap% %date%"
        , commands = [ Run Swap [] 10
                     , Run Date "%a %b %_d %I:%M %p" "date" 10
                     , Run StdinReader
                     ]
        }


